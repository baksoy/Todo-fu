<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beraaksoy.todofu.DetailActivity">

    <EditText
        android:id="@+id/todo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/todo_title"
        android:textColor="@color/formTextColor"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/todo_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/todo_title"
        android:layout_below="@+id/todo_title"
        android:ems="10"
        android:hint="@string/todo_note"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="@color/formTextColor"
        android:textSize="20sp" />

    <!--<DatePicker-->
    <!--android:id="@+id/datePicker"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_below="@+id/editText2"-->
    <!--android:layout_weight="2" />-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:inputType="datetime"
        android:textColor="@color/formTextColor"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/taskItemPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/status"
        android:layout_alignEnd="@+id/datePicker"
        android:layout_alignRight="@+id/datePicker"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:textColor="@color/formTextColor"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tomorrow"
            android:textColor="@color/formTextColor"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Later"
            android:textColor="@color/formTextColor"
            android:textSize="18sp" />

    </RadioGroup>


</LinearLayout>
